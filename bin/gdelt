#!/usr/bin/env node
/* eslint-disable no-unused-expressions */
const download = require('../src/download');
const lint = require('../src/lint');
const list = require('../src/list');


const datetime = {
  alias: 'd',
  describe: 'datetime             [defaults to today]',
};
const format = {
  alias: 'f',
  choices: ['json', 'n3'],
  default: 'json',
  describe: 'output format',
};
const cachePath = {
  describe: 'path to cache        [defaults to internal module cache]',
};


require('yargs')
  .usage('$0 <cmd> [args]')
  .command(
    'download', 'download gdelt by datetime',
    { datetime, format, cachePath },
    argv => download(argv).pipe(process.stdout)
  )
  .command(
    'lint',
    'lint gdelt by datetime',
    { datetime, cachePath },
    argv => lint(argv).pipe(process.stdout)
  )
  .command(
    'list',
    'list all available gdelt files',
    { cachePath },
    argv => list(argv).pipe(process.stdout)
  )
  .command(
    'clean',
    'clean cache',
    { cachePath },
    require('../src/clean')
  )
  .demand(1, 'Please specify a command')
  .help()
  .strict()
  .argv;
